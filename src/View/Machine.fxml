      </ImageView>
      <Button fx:id="coffe" ellipsisString="" layoutX="249.0" layoutY="186.0" mnemonicParsing="false" onAction="#makeCoffe" opacity="0.0" prefHeight="33.0" prefWidth="33.0" textAlignment="CENTER" textFill="TRANSPARENT" />
      <Button fx:id="cupotion" ellipsisString="" layoutX="385.0" layoutY="186.0" mnemonicParsing="false" onAction="#makeCupotion" opacity="0.0" prefHeight="33.0" prefWidth="33.0" textAlignment="CENTER" textFill="TRANSPARENT" />
