            <Image url="@../Img/gun.png" />
         </image>
      </ImageView>
      <MediaView fx:id="boom" fitHeight="400.0" fitWidth="400.0" layoutX="100.0" layoutY="56.0" />
      <ImageView fx:id="bad" fitHeight="522.0" fitWidth="586.0" layoutX="9.0" layoutY="6.0" pickOnBounds="true">
         <image>
            <Image url="@../Img/bad.png" />
         </image>
      </ImageView>
