         <font>
            <Font name="System Bold" size="12.0" />
         </font>
         <effect>
            <Glow level="1.0" />
         </effect>
      </Label>
      <ImageView fx:id="good" fitHeight="522.0" fitWidth="592.0" layoutX="5.0" layoutY="4.0" pickOnBounds="true">
         <image>
            <Image url="@../Img/good.png" />
         </image>
      </ImageView>
      <ImageView fx:id="gun" fitHeight="150.0" fitWidth="200.0" layoutX="51.0" layoutY="214.0" pickOnBounds="true" preserveRatio="true">
